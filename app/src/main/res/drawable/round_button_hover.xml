<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <!--make a gradient background-->
            <gradient android:angle="90" android:centerColor="@color/button_color_hover_bg" android:endColor="@color/button_color_hover_bg" android:gradientRadius="90" android:startColor="@color/button_color_hover_bg" android:type="linear" />
            <!--apply a border around button-->
            <stroke android:width="0dp" android:color="@color/button_color_hover_bg" />
            <!-- make the button corners rounded-->
            <corners android:radius="30dp" />
        </shape>
    </item>
</selector>