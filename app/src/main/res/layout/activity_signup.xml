<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:layoutDirection="ltr">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitXY" />

    <ScrollView
        android:id="@+id/mscrollview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lbl_signup"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="@string/lbl_signup"
                        android:textAllCaps="true"
                        android:textColor="@color/textcolor_black"
                        android:textSize="@dimen/large_text_size" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/edit_textfield_height_land"
                        android:layout_marginTop="50dp"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="15dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/account_icon"
                            android:tint="@color/customGrey" />

                        <EditText
                            android:id="@+id/txt_full_name"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="8dp"
                            android:background="@android:color/transparent"
                            android:ems="10"
                            android:gravity="center|left"
                            android:hint="@string/txt_full_name"
                            android:inputType="text"
                            android:letterSpacing="0.05"
                            android:maxLength="40"
                            android:singleLine="true"
                            android:textColor="@color/textcolor_black"
                            android:textColorHint="@color/textcolor_light_gray"
                            android:textSize="@dimen/default_text_size" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="@dimen/edit_textfield_height_land"
                            android:layout_marginRight="3dp"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="fill_parent"
                                android:layout_marginLeft="15dp"
                                android:padding="1dp"
                                android:scaleType="centerInside"
                                android:src="@drawable/type"
                                android:tint="@color/customGrey" />

                            <EditText
                                android:id="@+id/txt_type"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_marginLeft="8dp"
                                android:background="@android:color/transparent"
                                android:ems="10"
                                android:gravity="center|left"
                                android:hint="@string/txt_type"
                                android:inputType="text"
                                android:letterSpacing="0.05"
                                android:maxLength="40"
                                android:singleLine="true"
                                android:textColor="@color/textcolor_black"
                                android:textColorHint="@color/textcolor_light_gray"
                                android:textSize="@dimen/default_text_size" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="@dimen/edit_textfield_height_land"
                            android:layout_marginLeft="3dp"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="fill_parent"
                                android:layout_marginLeft="15dp"
                                android:padding="2dp"
                                android:scaleType="centerInside"
                                android:src="@drawable/model"
                                android:tint="@color/customGrey" />

                            <EditText
                                android:id="@+id/txt_model"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_marginLeft="8dp"
                                android:background="@android:color/transparent"
                                android:ems="10"
                                android:gravity="center|left"
                                android:hint="@string/txt_model"
                                android:inputType="text"
                                android:letterSpacing="0.05"
                                android:maxLength="40"
                                android:singleLine="true"
                                android:textColor="@color/textcolor_black"
                                android:textColorHint="@color/textcolor_light_gray"
                                android:textSize="@dimen/default_text_size" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="@dimen/edit_textfield_height_land"
                            android:layout_marginRight="3dp"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="fill_parent"
                                android:layout_marginLeft="15dp"
                                android:padding="1dp"
                                android:scaleType="centerInside"
                                android:src="@drawable/engine"
                                android:tint="@color/customGrey" />

                            <EditText
                                android:id="@+id/txt_engine"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_marginLeft="8dp"
                                android:background="@android:color/transparent"
                                android:ems="10"
                                android:gravity="center|left"
                                android:hint="@string/txt_engine"
                                android:inputType="text"
                                android:letterSpacing="0.05"
                                android:maxLength="40"
                                android:singleLine="true"
                                android:textColor="@color/textcolor_black"
                                android:textColorHint="@color/textcolor_light_gray"
                                android:textSize="@dimen/default_text_size" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="@dimen/edit_textfield_height_land"
                            android:layout_marginLeft="3dp"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="fill_parent"
                                android:layout_marginLeft="15dp"
                                android:padding="2dp"
                                android:scaleType="centerInside"
                                android:src="@drawable/year"
                                android:tint="@color/customGrey" />

                            <EditText
                                android:id="@+id/txt_year"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_marginLeft="8dp"
                                android:background="@android:color/transparent"
                                android:ems="10"
                                android:gravity="center|left"
                                android:hint="@string/txt_year"
                                android:inputType="text"
                                android:letterSpacing="0.05"
                                android:maxLength="40"
                                android:singleLine="true"
                                android:textColor="@color/textcolor_black"
                                android:textColorHint="@color/textcolor_light_gray"
                                android:textSize="@dimen/default_text_size" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/edit_textfield_height_land"
                        android:layout_marginTop="3dp"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="15dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/email_icon"
                            android:tint="@color/customGrey" />

                        <EditText
                            android:id="@+id/txt_user_email"
                            android:layout_width="fill_parent"
                            android:layout_height="@dimen/edit_textfield_height"
                            android:layout_marginLeft="8dp"
                            android:background="@android:color/transparent"
                            android:ems="10"
                            android:gravity="center|left"
                            android:hint="@string/txt_user_email"
                            android:inputType="textEmailAddress"
                            android:letterSpacing="0.05"
                            android:maxLength="245"
                            android:singleLine="true"
                            android:textColor="@color/textcolor_black"
                            android:textColorHint="@color/textcolor_light_gray"
                            android:textSize="@dimen/default_text_size" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/edit_textfield_height_land"
                        android:layout_marginTop="3dp"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="15dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/password_icon"
                            android:tint="@color/customGrey" />

                        <EditText
                            android:id="@+id/txt_user_password"
                            android:layout_width="fill_parent"
                            android:layout_height="@dimen/edit_textfield_height"
                            android:layout_marginLeft="8dp"
                            android:background="@android:color/transparent"
                            android:ems="10"
                            android:gravity="center|left"
                            android:hint="@string/txt_password"
                            android:inputType="textPassword"
                            android:letterSpacing="0.05"
                            android:maxLength="245"
                            android:singleLine="true"
                            android:textColor="@color/textcolor_black"
                            android:textColorHint="@color/textcolor_light_gray"
                            android:textSize="@dimen/default_text_size" />


                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/chk_keep_me_logged_in"
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/check_with_mark" />

                        <TextView
                            android:id="@+id/lbl_keep_me_logged_in"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/chk_keep_me_logged_in"
                            android:text="@string/lbl_keep_me_logged_in"
                            android:textColor="@color/white"
                            android:textSize="@dimen/default_text_size" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/button_height"
                        android:layout_marginTop="30dp">

                        <Button
                            android:id="@+id/btn_signup"
                            android:layout_width="@dimen/button_width"
                            android:layout_height="fill_parent"
                            android:layout_centerInParent="true"
                            android:background="@drawable/button_click"
                            android:gravity="center"
                            android:letterSpacing="0.1"
                            android:singleLine="true"
                            android:text="@string/lbl_signup"
                            android:textAllCaps="false"
                            android:textColor="@color/textcolor_black"
                            android:textSize="@dimen/button_text_size" />

                    </RelativeLayout>

                    <Button
                        android:id="@+id/btn_reset_password"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/small_button_height"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:singleLine="true"
                        android:text="@string/btn_reset_password"
                        android:textAllCaps="false"
                        android:textColor="@color/button_color_bg"
                        android:textSize="@dimen/default_text_size"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/btn_already_account"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/small_button_height"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="@string/btn_create_account"
                        android:textAllCaps="false"
                        android:textColor="@color/button_color_bg"
                        android:textSize="@dimen/default_text_size" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/lbl_by_pressing_cont"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/small_button_height"
                            android:layout_gravity="center"
                            android:background="@android:color/transparent"
                            android:gravity="center"
                            android:text="@string/lbl_by_pressing_cont"
                            android:textAllCaps="false"
                            android:textColor="@color/textcolor_black"
                            android:textSize="@dimen/default_text_size" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/small_button_height"
                            android:layout_gravity="center"
                            android:layout_marginLeft="05dp"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/lbl_terms"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:gravity="center"
                                android:singleLine="true"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="@dimen/default_text_size" />

                            <TextView
                                android:id="@+id/lbl_pravicy_policy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/lbl_terms"
                                android:background="@android:color/transparent"
                                android:gravity="center"
                                android:singleLine="true"
                                android:text="@string/lbl_pravicy_policy"
                                android:textAllCaps="false"
                                android:textColor="@color/button_color_bg"
                                android:textSize="@dimen/default_text_size" />

                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:padding="20dp"
        android:scaleType="centerInside"
        android:src="@drawable/back_arrow"
        android:tint="@color/textcolor_black"  />

    <TextView
        android:id="@+id/versionSignup"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text=""
        android:textColor="@color/white"
        android:textSize="12dp" />
</RelativeLayout>